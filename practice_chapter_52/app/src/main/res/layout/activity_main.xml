<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableRow>
        <EditText
            android:id="@+id/edit1"
            android:layout_span="5"/>
    </TableRow>

    <TableRow>
        <EditText
            android:id="@+id/edit2"
            android:layout_span="5"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn1"
            android:layout_span="1"
            android:text="1"/>
        <Button
            android:id="@+id/btn2"
            android:layout_span="1"
            android:text="2"/>
        <Button
            android:id="@+id/btn3"
            android:layout_span="1"
            android:text="3"/>
        <Button
            android:id="@+id/btn4"
            android:layout_span="1"
            android:text="4"/>
        <Button
            android:id="@+id/btn5"
            android:layout_span="1"
            android:text="5"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn6"
            android:layout_span="5"/>
    </TableRow>

</TableLayout>
